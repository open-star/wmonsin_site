extends layout.jade

block content
    body(ng-app="BackendApplication", ng-controller="LoginController")
        md-content.background
            md-card.box-edge
            if !user
                div
                    md-button(ng-click='showRegisterDialog()') Reg
                    md-button(ng-click="showLoginDialog()") Login
            if user
                div
                    if provider == "local"
                        md-button(ng-click="showPasswordDialog()") Pass
                        md-button(ng-click='Logout()') logout
                    else
                        md-button(ng-click='Logout()') logout

                    md-button(ng-click='sendmail()') sendmail

            md-card.box-edge(ng-controller="ContentController")

                div(ng-model="about.description")



